<h2> Your Favorite Facts: </h2>

<ul> 
    <% faveFacts.forEach(faveFact => { %>
        <div>
    
            <h2><%= faveFact.fact %></h2>
            <h3><%= faveFact.animeName %></h3>
            <h5>Comments:</h5>
            <% comments.forEach(comment =>{ %>
                <p><% if(comment.animeId === faveFact.id){ %>
                        <%= comment.content %> 
                <% } %>      
                </p>
            <% }) %>

            <form method="POST" action="/faveFact/favorites/<%= faveFact.id %>?_method=delete">
                <button type="submit">Delete this Fave</button>
            </form>

            <form method="POST" action="/comment/newComment">
                <input type="text" id="content" name="content" required />
                <input hidden value="<%= faveFact.animeName %>" name="animeName"/>
                <input hidden value="<%= faveFact.id %>" name="factId"/>
                <button type="submit">Comment</button>
            </form>
    
        </div>
    <% }) %>
</ul>